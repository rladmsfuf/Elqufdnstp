        .zodiac-grid {
            display: grid;
            /* 화면 크기에 따라 아이콘 개수를 자동으로 조절 (최소 100px) */
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
            gap: 20px; /* 아이콘 사이의 간격 */
        }

        /* --- 4. 개별 띠 아이콘 스타일 --- */
        .zodiac-icon {
            cursor: pointer; /* 마우스를 올리면 손가락 모양으로 변경 */
            padding: 15px;
            border-radius: 15px;
            background-color: #f5f5f7;
            transition: transform 0.2s ease, box-shadow 0.2s ease; /* 부드러운 애니메이션 효과 */
            text-align: center;
        }

        /* 마우스를 올렸을 때 아이콘이 살짝 위로 올라가는 효과 */
        .zodiac-icon:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .zodiac-icon img {
            width: 60px;
            height: 60px;
            margin-bottom: 10px;
        }

        .zodiac-icon p {
            margin: 0;
            font-size: 15px;
            font-weight: 500;
            color: #333;
        }

        /* --- 5. 운세 팝업 (모달) 스타일 --- */
        .modal {
            display: none; /* 평소에는 숨겨둡니다. */
            position: fixed; /* 화면에 고정 */
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5); /* 반투명한 검은색 배경 */
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fff;
            margin: auto;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 4px 30px rgba(0,0,0,0.2);
            width: 90%;
            max-width: 500px;
            text-align: center;
            position: relative;
            animation: fadeIn 0.3s ease; /* 나타날 때 부드럽게 보이는 효과 */
        }
        
        /* 팝업창이 나타나는 애니메이션 효과 */
        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.95); }
            to { opacity: 1; transform: scale(1); }
        }

        .close-button {
            color: #aaa;
            position: absolute;
            top: 15px;
            right: 20px;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        #modal-title {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        
        #modal-title img {
            width: 40px;
            height: 40px;
        }

        #modal-text {
            font-size: 16px;
            line-height: 1.6; /* 줄 간격을 넓혀 가독성을 높임 */
            color: #555;
            text-align: left; /* 운세 내용은 왼쪽 정렬 */
        }
